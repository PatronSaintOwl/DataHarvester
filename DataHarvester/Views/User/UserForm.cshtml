@model DataHarvester.Model.EntityFramework.tblUser
@{
    ViewBag.Title = "DataHarvester - User";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


@using (Html.BeginForm("Save", "User", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    <div class="container user-form">
        <div class="form-group">
            @Html.LabelFor(x => x.name)
            @Html.TextBoxFor(x => x.name, new { @class = "form-control", @maxlength = 50 })
            @Html.ValidationMessageFor(x => x.name)
        </div>

        <div class="form-group">
            @Html.LabelFor(x => x.username)
            @Html.TextBoxFor(x => x.username, new { @class = "form-control", @maxlength = 25 })
            @Html.ValidationMessageFor(x => x.username)
        </div>

        <div class="form-group">
            @Html.LabelFor(x => x.emailAddress)
            @Html.TextBoxFor(x => x.emailAddress, new { @class = "form-control", @maxlength = 100 })
            @Html.ValidationMessageFor(x => x.emailAddress)
        </div>

        <div class="form-group">
            @Html.LabelFor(x => x.password)
            @Html.PasswordFor(x => x.password, new { @class = "form-control", @maxlength = 6, value = Model.password })
            @Html.ValidationMessageFor(x => x.password)
        </div>
        <br />
        @Html.HiddenFor(x => x.ID)
        @{
            string btnText = Model.ID == 0 ? "KAYIT OL" : "GÜNCELLE";
        }
        <button id="updUser" type="submit" class="btn btn-success btn-lg btn-block">@btnText</button>
        @if (Model.ID != 0)
        {
            <input id="delUser" type="button" class="btn btn-danger btn-lg btn-block" value="HESABI SİL" /><br />
        }
    </div>
}
